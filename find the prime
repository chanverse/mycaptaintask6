#include <stdio.h>
#include <stdlib.h>
int prime(int,int,int);
int main()
{
    int num,rem=0,count=0;
    printf("Enter a number:");
    scanf("%d",&num);
   rem=prime(num,num,count);
    if(rem<3)
    printf("%d is a prime number",num);
    else{
    printf("%d is not a prime number",num);
    }
    return 0;
}
int prime(int p,int n,int cnt){
if(n==1)
return ++cnt;
else {
if((p%n)==0){
cnt++;
}
return prime(p,--n,cnt);
}
}
